// .env.production
# Configuration de l'application
PORT=3000
NODE_ENV=production

# MongoDB
MONGODB_URI=mongodb://mongodb:27017/branda
MONGODB_USER=brandauser
MONGODB_PASSWORD=brandapassword

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=votre_secret_jwt_tres_securise_a_changer_en_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=votre_refresh_secret_jwt_tres_securise_a_changer_en_production
JWT_REFRESH_EXPIRES_IN=30d

# OpenRouter (API OpenAI)
OPENROUTER_KEY=votre_cle_openrouter
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENAI_MODEL=gpt-4

# BullMQ
BULL_REDIS_URL=redis://redis:6379

# Prometheus
PROMETHEUS_PORT=9090

# Email (pour la vérification d'email)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=votre_email@example.com
EMAIL_PASSWORD=votre_mot_de_passe_email
EMAIL_FROM=noreply@branda.com

# Sécurité
CORS_ORIGIN=https://votre-domaine-frontend.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
