# Variables d'environnement pour la production
# Remplacer les valeurs par les informations réelles lors du déploiement

# Serveur
PORT=3000

# MongoDB
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/branda?retryWrites=true&w=majority

# Redis
REDIS_HOST=redis-hostname.cloud-provider.com
REDIS_PORT=6379
REDIS_PASSWORD=votre_mot_de_passe_redis_securise

# JWT
JWT_SECRET=votre_secret_jwt_tres_securise_a_changer_en_production

# OpenAI via OpenRouter
OPENROUTER_KEY=votre_cle_api_openrouter
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# Prometheus
PROMETHEUS_USER=prometheus_user
PROMETHEUS_PASSWORD=prometheus_password_securise

# Email (pour les notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASSWORD=votre_mot_de_passe_email
EMAIL_FROM=noreply@branda.com

# Environnement
NODE_ENV=production

# URL de l'API (pour le frontend)
API_URL=https://branda-api.onrender.com
